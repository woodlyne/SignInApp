<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.XpertTech.registrationapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.XpertTech.registrationapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.XpertTech.registrationapp.WelcomePageActivity"
            android:label="@string/title_activity_welcome_page"
            android:parentActivityName="com.XpertTech.registrationapp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.XpertTech.registrationapp.MainActivity" />
        </activity>
        <activity
            android:name="com.XpertTech.registrationapp.ThirdActivity"
            android:label="@string/title_activity_third"
            android:parentActivityName="com.XpertTech.registrationapp.WelcomePageActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.XpertTech.registrationapp.WelcomePageActivity" />
        </activity>
        <activity
            android:name="com.XpertTech.registrationapp.ChangeNameActivity"
            android:label="@string/title_activity_change_name"
            android:parentActivityName="com.XpertTech.registrationapp.WelcomePageActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.XpertTech.registrationapp.WelcomePageActivity" />
        </activity>
    </application>

</manifest>
